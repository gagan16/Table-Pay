<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="S no."
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewsno"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:textSize="20sp" />

    <TextView
        android:text="Quantity"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewiten"
        android:layout_toEndOf="@+id/textViewiten"
        android:id="@+id/textViewquantity"
        android:textSize="20sp" />

    <TextView
        android:text="Price"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewquantity"
        android:layout_toEndOf="@+id/textViewquantity"
        android:id="@+id/textViewprice"
        android:layout_width="90dp"
        android:textSize="20sp" />

    <TextView
        android:text="Item"
        android:layout_height="50dp"
        android:id="@+id/textViewiten"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewsno"
        android:layout_toEndOf="@+id/textViewsno"
        android:layout_width="190dp"
        android:textSize="20sp" />
</RelativeLayout>
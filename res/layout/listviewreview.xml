<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <TextView
        android:text="Reviewername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="21dp"
        android:id="@+id/textViewreviewerName"
        android:textSize="15sp"
        android:textColor="@color/bg_register" />

    <TextView
        android:text="Text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignLeft="@+id/textViewreviewerName"
        android:layout_alignStart="@+id/textViewreviewerName"
        android:id="@+id/textViewreviwertext" />

    <RatingBar
        android:layout_height="wrap_content"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textViewreviewerName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Restauranttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewreviewerName"
        android:layout_alignLeft="@+id/textViewreviewerName"
        android:layout_alignStart="@+id/textViewreviewerName"
        android:layout_marginTop="18dp"
        android:id="@+id/textViewreviewtime" />
</RelativeLayout>